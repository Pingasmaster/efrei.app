FROM nginx:1.29.4-alpine
# Nginx base image to serve the static SPA assets.

COPY frontend/nginx.conf /etc/nginx/conf.d/default.conf
# Copy prebuilt static assets into the Nginx web root.
COPY www/ /usr/share/nginx/html/

EXPOSE 80
# Run Nginx in the foreground for container supervision.
CMD ["nginx", "-g", "daemon off;"]
